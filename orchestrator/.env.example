# =========================
# Configurações da Aplicação
# =========================
APP_NAME=youtube-caption-orchestrator
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=false

# Porta/host usados pela app (Uvicorn)
APP_HOST=0.0.0.0
APP_PORT=8004
WORKERS=1

# (Fallbacks; o config agora aceita ambos)
HOST=0.0.0.0
PORT=8004

# =========================
# Redis
# =========================
REDIS_HOST=192.168.18.110
REDIS_PORT=6379
REDIS_DB=3
# Importante: não use interpolação aqui; deixe o valor completo
REDIS_URL=redis://192.168.18.110:6379/3

# =========================
# Cache e Jobs
# =========================
CACHE_TTL_HOURS=24
JOB_TIMEOUT_MINUTES=60

# =========================
# Resiliência HTTP (novos)
# =========================
HTTP_MAX_RETRIES=3
RETRY_BACKOFF_BASE_SECONDS=1.5

# =========================
# Logging
# =========================
LOG_LEVEL=INFO
LOG_DIR=./logs

# =========================
# Microserviços URLs
# =========================
# Se os microserviços estiverem em containers do mesmo docker-compose,
# prefira usar o nome do serviço como host (ex.: http://video-downloader:8001).
VIDEO_DOWNLOADER_URL=http://localhost:8001
AUDIO_NORMALIZATION_URL=http://localhost:8002
AUDIO_TRANSCRIBER_URL=http://localhost:8003

# =========================
# Timeouts dos Microserviços (segundos)
# =========================
VIDEO_DOWNLOADER_TIMEOUT=300
AUDIO_NORMALIZATION_TIMEOUT=180
AUDIO_TRANSCRIBER_TIMEOUT=600

# =========================
# Polling Configuration
# =========================
POLL_INTERVAL=2
MAX_POLL_ATTEMPTS=300

# =========================
# Parâmetros Padrão
# =========================
DEFAULT_LANGUAGE=auto
DEFAULT_REMOVE_NOISE=true
DEFAULT_CONVERT_MONO=true
DEFAULT_SAMPLE_RATE_16K=true
