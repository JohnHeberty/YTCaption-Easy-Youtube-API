# Application Settings
APP_NAME=Whisper Transcription API
APP_VERSION=1.0.0
APP_ENVIRONMENT=production

# Server Settings
HOST=0.0.0.0
PORT=8000

# Whisper Settings
# Options: tiny, base, small, medium, large, turbo
# RAM por worker: tiny=~400MB, base=~800MB, small=~1.5GB, medium=~3GB, large=~6GB
WHISPER_MODEL=base              # base=bom equil√≠brio qualidade/performance
WHISPER_DEVICE=cpu              # cpu ou cuda (se GPU dispon√≠vel)
WHISPER_LANGUAGE=auto           # auto=detec√ß√£o autom√°tica, ou pt/en/es/etc

# Parallel Transcription Settings
# ‚ö†Ô∏è  Requer RAM suficiente: base=~800MB/worker, small=~1.5GB/worker, medium=~3GB/worker
# üìñ Veja docs/PARALLEL_TRANSCRIPTION_GUIDE.md para recomenda√ß√µes detalhadas
ENABLE_PARALLEL_TRANSCRIPTION=true        # true=paralelo (4+ cores, 8GB+ RAM), false=normal (mais est√°vel)
PARALLEL_WORKERS=2                        # Conservador: 2 workers (~1.6GB RAM para base model)
                                          # 0=auto-detect (usa todos os cores, alto uso de RAM)
                                          # Recomendado: 2-4 workers para produ√ß√£o
PARALLEL_CHUNK_DURATION=120               # Dura√ß√£o de cada chunk em segundos (120=2min recomendado)
AUDIO_LIMIT_SINGLE_CORE=300               # √Åudios < 5min: single-core (eficiente), >= 5min: paralelo (r√°pido)

# YouTube
YOUTUBE_FORMAT=worstaudio
MAX_VIDEO_SIZE_MB=2500                    # Aumentado para suportar v√≠deos longos
MAX_VIDEO_DURATION_SECONDS=10800          # 3 horas m√°ximo
DOWNLOAD_TIMEOUT=900                      # 15 minutos

# Storage Settings
TEMP_DIR=./temp
CLEANUP_ON_STARTUP=true
CLEANUP_AFTER_PROCESSING=true
MAX_TEMP_AGE_HOURS=24

# API Settings
MAX_CONCURRENT_REQUESTS=3                 # Reduzido para evitar sobrecarga com v√≠deos longos
REQUEST_TIMEOUT=3600                      # 1 hora para v√≠deos longos
ENABLE_CORS=true
CORS_ORIGINS=*

# Logging Settings
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=./logs/app.log

# Performance Settings
WORKERS=1
WORKER_CLASS=uvicorn.workers.UvicornWorker
