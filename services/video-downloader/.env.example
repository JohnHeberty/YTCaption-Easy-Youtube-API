# ===== APLICAÇÃO =====
APP_NAME=Video Downloader Service
VERSION=2.0.0
ENVIRONMENT=development
DEBUG=false

# ===== SERVIDOR =====
HOST=0.0.0.0
DIVISOR=1
PORT=800${DIVISOR}
WORKERS=1

# ===== REDIS =====
REDIS_URL=redis://192.168.18.110:6379/${DIVISOR}

# ===== CELERY =====
CELERY_BROKER_URL=${REDIS_URL}
CELERY_RESULT_BACKEND=${REDIS_URL}

# ===== CACHE =====
CACHE__TTL_HOURS=24
CACHE_TTL_HOURS=24
CACHE_DIR=./cache

# ===== PROCESSAMENTO =====
MAX_CONCURRENT_DOWNLOADS=2
DEFAULT_QUALITY=best

# ===== LIMITES =====
MAX_FILE_SIZE_MB=10240

# ===== DIRETÓRIOS =====
DOWNLOADS_DIR=./downloads
TEMP_DIR=./temp
LOG_DIR=./logs
UPLOAD_DIR=./uploads
PROCESSED_DIR=./processed

# ===== LOGGING =====
LOG_LEVEL=INFO

# ===== TIMEOUTS =====
JOB_PROCESSING_TIMEOUT_SECONDS=1800

# ===== DOCKER (descomente para Docker Compose) =====
# REDIS_URL=redis://redis:6379/0
# CELERY_BROKER_URL=redis://redis:6379/0
# CELERY_RESULT_BACKEND=redis://redis:6379/0