# ===== APPLICATION =====
APP_NAME=Audio Voice Service
VERSION=1.0.0
ENVIRONMENT=production
DEBUG=false
HOST=0.0.0.0
DIVISOR=5
PORT=800${DIVISOR}

# ===== REDIS =====
REDIS_URL=redis://localhost:6379/${DIVISOR}

# ===== CELERY =====
CELERY_BROKER_URL=redis://localhost:6379/${DIVISOR}
CELERY_RESULT_BACKEND=redis://localhost:6379/${DIVISOR}
CELERY_TASK_TIME_LIMIT=900
CELERY_TASK_SOFT_TIME_LIMIT=840

# ===== CACHE =====
CACHE_TTL_HOURS=24
VOICE_PROFILE_TTL_DAYS=30

# ===== LIMITS =====
MAX_FILE_SIZE_MB=100
MAX_DURATION_MINUTES=10
MAX_TEXT_LENGTH=10000
MAX_CONCURRENT_JOBS=3
JOB_TIMEOUT_MINUTES=15

# ===== OPENVOICE =====
OPENVOICE_MODEL_PATH=./models
OPENVOICE_DEVICE=cpu
OPENVOICE_DEFAULT_MODEL=base
OPENVOICE_PRELOAD_MODELS=false
OPENVOICE_SAMPLE_RATE=24000
OPENVOICE_MIN_CLONE_DURATION_SEC=5
OPENVOICE_MAX_CLONE_DURATION_SEC=60

# ===== DIRECTORIES =====
UPLOAD_DIR=./uploads
PROCESSED_DIR=./processed
TEMP_DIR=./temp
VOICE_PROFILES_DIR=./voice_profiles
MODELS_DIR=./models
LOG_DIR=./logs

# ===== LOGGING =====
LOG_LEVEL=INFO
LOG_FORMAT=json
