# ===== APLICAÇÃO =====
APP_NAME=Audio Normalization Service
VERSION=2.0.0
ENVIRONMENT=development
DEBUG=false

# ===== SERVIDOR =====
HOST=0.0.0.0
DIVISOR=3
PORT=8003
WORKERS=1

# ===== REDIS =====
IP_REDIS=192.168.1.110
REDIS_URL=redis://192.168.1.110:6379/${DIVISOR}

# ===== CELERY =====
CELERY_BROKER_URL=redis://192.168.1.110:6379/${DIVISOR}
CELERY_RESULT_BACKEND=redis://192.168.1.110:6379/${DIVISOR}
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json
CELERY_ACCEPT_CONTENT=json
CELERY_TIMEZONE=UTC
CELERY_ENABLE_UTC=true
CELERY_TASK_TRACK_STARTED=true
CELERY_TASK_TIME_LIMIT=1800
CELERY_TASK_SOFT_TIME_LIMIT=1500
CELERY_WORKER_PREFETCH_MULTIPLIER=1
CELERY_WORKER_MAX_TASKS_PER_CHILD=100

# ===== CACHE =====
CACHE__TTL_HOURS=24
CACHE__CLEANUP_INTERVAL_MINUTES=30
CACHE__MAX_CACHE_SIZE_MB=1024
CACHE_TTL_HOURS=24
CLEANUP_INTERVAL_MINUTES=30

# ===== LIMITES =====
MAX_FILE_SIZE_MB=2048
MAX_DURATION_MINUTES=240
PROCESSING__MAX_FILE_SIZE_MB=2048
PROCESSING__MAX_DURATION_MINUTES=240
PROCESSING__MAX_CONCURRENT_JOBS=3
PROCESSING__JOB_TIMEOUT_MINUTES=120
PROCESSING__NOISE_REDUCTION_STRENGTH=0.8

# ===== ÁUDIO =====
AUDIO_ENABLE_CHUNKING=true
AUDIO_CHUNK_SIZE_MB=30
AUDIO_CHUNK_DURATION_SEC=120
AUDIO_CHUNK_OVERLAP_SEC=2

# ===== REDUÇÃO DE RUÍDO =====
NOISE_REDUCTION_MAX_DURATION_SEC=300
NOISE_REDUCTION_SAMPLE_RATE=22050
NOISE_REDUCTION_CHUNK_SIZE_SEC=30

# ===== ISOLAMENTO VOCAL =====
VOCAL_ISOLATION_MAX_DURATION_SEC=180

# ===== DIRETÓRIOS =====
UPLOAD_DIR=./uploads
PROCESSED_DIR=./processed
TEMP_DIR=./temp
LOG_DIR=./logs
BACKUP_DIR=./backup

# ===== LOGGING =====
LOG_LEVEL=INFO

# ===== TIMEOUTS =====
JOB_PROCESSING_TIMEOUT_SECONDS=7200
ASYNC_TIMEOUT_SECONDS=7200

