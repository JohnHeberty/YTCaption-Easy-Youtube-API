# ===== APLICAÇÃO =====
APP_NAME=Audio Normalization Service
VERSION=2.0.0
ENVIRONMENT=development
DEBUG=false

# ===== SERVIDOR =====
HOST=0.0.0.0
PORT=8002
WORKERS=1

# ===== REDIS =====
IP_REDIS=192.168.18.110
REDIS_URL=redis://${IP_REDIS}:6379/2

# ===== CELERY =====
CELERY_BROKER_URL=redis://${IP_REDIS}:6379/2
CELERY_RESULT_BACKEND=redis://${IP_REDIS}:6379/2
CELERY_TASK_TIME_LIMIT=1800
CELERY_TASK_SOFT_TIME_LIMIT=1500

# ===== CACHE =====
CACHE__TTL_HOURS=24

# ===== LIMITES =====
MAX_FILE_SIZE_MB=500
MAX_DURATION_MINUTES=120

# ===== DIRETÓRIOS =====
UPLOAD_DIR=./uploads
PROCESSED_DIR=./processed
TEMP_DIR=./temp
LOG_DIR=./logs

# ===== LOGGING =====
LOG_LEVEL=INFO

# ===== TIMEOUTS =====
JOB_PROCESSING_TIMEOUT_SECONDS=1800

# ===== DOCKER (descomente para Docker Compose) =====
# REDIS_URL=redis://redis:6379/0
# CELERY_BROKER_URL=redis://redis:6379/0
# CELERY_RESULT_BACKEND=redis://redis:6379/0
