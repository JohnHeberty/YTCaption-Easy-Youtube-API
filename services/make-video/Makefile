	echo "   Total: $$TOTAL testes"; \
	echo ""
	@echo "ğŸ” Verificando mocks..."
	@MOCKS=$$(find tests/ -name "*.py" -exec grep -l "Mock\|@patch\|MagicMock" {} \; 2>/dev/null | wc -l); \
	if [ $$MOCKS -eq 0 ]; then \
		echo "   âœ… Zero mocks encontrados"; \
	else \
		echo "   âŒ $$MOCKS arquivos com mocks encontrados!"; \
		exit 1; \
