	@echo ""
	@echo "ğŸ“„ Arquivos de configuraÃ§Ã£o:"
	@test -f .env && echo "  âœ… .env" || echo "  âš ï¸  .env nÃ£o encontrado"
	@test -f docker-compose.yml && echo "  âœ… docker-compose.yml" || echo "  âŒ docker-compose.yml"
