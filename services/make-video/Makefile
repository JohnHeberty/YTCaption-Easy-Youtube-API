clean: ## Limpar arquivos temporÃ¡rios e cache
	@echo "ğŸ§¹ Limpando arquivos temporÃ¡rios..."
	find . -type d -name "__pycache__" -exec rm -rf {} + 2>/dev/null || true
	find . -type f -name "*.pyc" -delete 2>/dev/null || true
	find . -type f -name "*.pyo" -delete 2>/dev/null || true
	find . -type f -name ".coverage" -delete 2>/dev/null || true
	find . -type d -name "*.egg-info" -exec rm -rf {} + 2>/dev/null || true
	find . -type d -name ".pytest_cache" -exec rm -rf {} + 2>/dev/null || true
	rm -rf htmlcov/ 2>/dev/null || true
	@echo "âœ… Limpeza concluÃ­da"

clean-storage: ## Limpar storage (âš ï¸ CUIDADO: remove vÃ­deos)
	@echo "âš ï¸  ATENÃ‡ÃƒO: Isso removerÃ¡ arquivos temporÃ¡rios do storage!"
	@echo "âœ… PRESERVADO: OK/, NOT_OK/, shorts_cache/, output_videos/"
	@read -p "Continuar? [y/N] " -n 1 -r; \
	echo; \
	if [[ $$REPLY =~ ^[Yy]$$ ]]; then \
		echo "ğŸ§¹ Limpando audio_uploads/..."; \
		rm -rf $(STORAGE_DIR)/audio_uploads/* 2>/dev/null || true; \
		echo "ğŸ§¹ Limpando temp/..."; \
		rm -rf $(STORAGE_DIR)/temp/* 2>/dev/null || true; \
		echo "ğŸ§¹ Limpando validation/h264_converted/..."; \
		rm -rf $(STORAGE_DIR)/validation/h264_converted/OK/* 2>/dev/null || true; \
		rm -rf $(STORAGE_DIR)/validation/h264_converted/NOT_OK/* 2>/dev/null || true; \
		echo "ğŸ§¹ Limpando caches..."; \
		rm -rf $(STORAGE_DIR)/audio_cache/* 2>/dev/null || true; \
		rm -rf $(STORAGE_DIR)/video_cache/* 2>/dev/null || true; \
		echo "âœ… Storage limpo (OK/, NOT_OK/, shorts_cache/, output_videos/ preservados)"; \
	fi

storage-info: ## Mostrar informaÃ§Ãµes sobre o storage
	@echo "ğŸ“Š Storage Information"
	@echo "â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•"
	@echo "ğŸ“‚ Estrutura:"
	@find $(STORAGE_DIR) -maxdepth 2 -type d | sort
	@echo ""
	@echo "ğŸ’¾ Tamanho por pasta:"
	@du -sh $(STORAGE_DIR)/* 2>/dev/null | sort -h
	@echo ""
	@echo "ğŸ“¹ Contagem de arquivos:"
	@echo "  OK/: $$(find $(STORAGE_DIR)/OK -name "*.mp4" 2>/dev/null | wc -l) vÃ­deos"
	@echo "  NOT_OK/: $$(find $(STORAGE_DIR)/NOT_OK -name "*.mp4" 2>/dev/null | wc -l) vÃ­deos"
	@echo "  shorts_cache/: $$(find $(STORAGE_DIR)/shorts_cache -name "*.mp4" 2>/dev/null | wc -l) vÃ­deos"
	@echo "  output_videos/: $$(find $(STORAGE_DIR)/output_videos -name "*.mp4" 2>/dev/null | wc -l) vÃ­deos"
	@echo "  validation/sample_OK/: $$(find $(STORAGE_DIR)/validation/sample_OK -name "*.mp4" 2>/dev/null | wc -l) vÃ­deos"
	@echo "  validation/sample_NOT_OK/: $$(find $(STORAGE_DIR)/validation/sample_NOT_OK -name "*.mp4" 2>/dev/null | wc -l) vÃ­deos"
	@echo "â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•"

clean-all: clean ## Limpeza total (cache + containers + volumes)
	@echo "ğŸ§¹ Limpeza TOTAL..."
	$(DOCKER_COMPOSE) down -v --remove-orphans
	docker system prune -f
	@echo "âœ… Limpeza total concluÃ­da"

validate: ## Validar configuraÃ§Ã£o e estrutura
	@echo "ğŸ” Validando configuraÃ§Ã£o..."
	@echo ""
	@echo "ğŸ“‚ Estrutura de diretÃ³rios:"
	@test -d $(STORAGE_DIR) && echo "  âœ… storage/" || echo "  âŒ storage/ (criando...)" && mkdir -p $(STORAGE_DIR)
	@test -d $(STORAGE_DIR)/OK && echo "  âœ… storage/OK/" || echo "  âŒ storage/OK/ (criando...)" && mkdir -p $(STORAGE_DIR)/OK
