# Configuração de ambiente para testes
ENVIRONMENT=test
LOG_LEVEL=DEBUG

# Redis - Database separada para testes
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=15

# Diretórios de teste (serão sobrescritos pelas fixtures)
DOWNLOAD_DIR=./data/download/videos
TRANSFORM_DIR=./data/transform/videos
VALIDATE_DIR=./data/validate
APPROVED_DIR=./data/approved/videos
REJECTED_DIR=./data/rejected/videos
OUTPUT_DIR=./data/output

# Configurações de processamento
MAX_RETRIES=3
FFMPEG_TIMEOUT=30
SUBTITLE_DETECTION_THRESHOLD=0.7
MAX_WORKERS=2

# Desabilita features desnecessárias em teste
ENABLE_CRON=false
ENABLE_METRICS=false
