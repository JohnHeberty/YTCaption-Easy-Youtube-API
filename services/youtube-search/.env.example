# Environment Configuration

# Application
APP_NAME=YouTube Search Service
VERSION=1.0.0
ENVIRONMENT=production
DEBUG=false
TZ=America/Sao_Paulo
HOST=0.0.0.0
PORT=8001

# Redis
# Redis configurado para usar inst√¢ncia compartilhada externa
IP_REDIS=192.168.1.110
DIVISOR=1
REDIS_URL=redis://${IP_REDIS}:6379/${DIVISOR}

# Celery
# Celery usa o mesmo Redis compartilhado
CELERY_BROKER_URL=redis://${IP_REDIS}:6379/${DIVISOR}
CELERY_RESULT_BACKEND=redis://${IP_REDIS}:6379/${DIVISOR}
CELERY_TASK_TIME_LIMIT=600
CELERY_TASK_SOFT_TIME_LIMIT=500

# Cache
CACHE_TTL_HOURS=24
CACHE_CLEANUP_INTERVAL_MINUTES=30
CACHE_MAX_SIZE_MB=512

# YouTube API
YOUTUBE_DEFAULT_TIMEOUT=10
YOUTUBE_MAX_RESULTS=50
YOUTUBE_MAX_VIDEOS_PER_CHANNEL=100

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_DIR=./logs

# CORS
CORS_ENABLED=true
CORS_ORIGINS=*
CORS_CREDENTIALS=true
CORS_METHODS=*
CORS_HEADERS=*
